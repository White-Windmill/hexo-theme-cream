// post.styl

#post > *
    display: block;
    box-sizing: border-box;
#post
    margin-top: 40px;
    width: 100%;
    // height: 200px;
    .post-content
        padding: 10px 15px;
        width: 98.5%;
        max-width: 850px;
        margin: 30px auto;
        background: #fff;
        border: 1px solid #ddd;
        box-shadow: 1px 1px 5px #ddd;
        .page-title
            min-height: 200px;
            background: teal;
            h1
                margin: 0;
                padding: 20px 20px;
                font-size: 30px;
        .page-info
            min-height: 60px;
            border-top: 1px solid #ddd;
            // border-left: 0.5px solid #ddd;
            // border-right: 1px solid #ddd;
            border-bottom: 1px solid #ddd;
            background: #fff;
            // background: black;
            margin: 0;
            padding: 0;
            height: 20%;
            .info
                display: flex;
                box-sizing: border-box;
                float: left;
                padding: 15px 20px;
                .favicon
                    img
                        width: 32px;
                        height: 32px;
                        border-radius: 50%;
                .author
                    margin-left: 20px;
                    // text-align: center;
            .tag
                display: flex;
                box-sizing: border-box;
                float: right;
                padding:15px 20px;
                a
                    text-decoration: none;
                    color: black;
                    font-size: 15px;
                i
                    font-size: 20px;
                    padding-left: 10px;
        .page-content
            // background: red;
        .page-content
            .highlight
                margin: .2em 2px;
            h1
                font-size: 28px;
            h2
                font-size: 24px;
            h3
                // line-height: 20px;
                font-size: 20px;
                // border-bottom: 1px solid #ddd;
            blockquote
                margin: 0;
                padding: 0 .6rem;
                border-left: .3rem solid #cbcbcb;
                color: #7e9296;
            strong
                font-weight: bolder;
            p
                font-size: 15px;
                line-height: 1.8em;
            img
                width: 100%;
                max-height: 200px;
            a
                color: #279fd2;
            table
                background: rgba(#0e0c0e, 0.82);
                width: 98.5%;
                .gutter
                    color: white;
                    padding-left: 10px;
                .code
                    padding-left: 5px;
                    padding-right: 10px;
                    color: whitesmoke;
